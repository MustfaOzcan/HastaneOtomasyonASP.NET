@model Doktor
<h2>Doktor Ekleme Sayfasi</h2>

<form method="post">


	<div class="border p-3 mt-5">

		<div class="row pb-3  form-group">
			<h2 class="text-primary "><strong>Doktor Ekle</strong> </h2>
			</hr>
		</div>


		<div class="mb-3  form-group"
		<label asp-for="Ad"></label>
		<input asp-for="Ad" class="form-control">
		<span asp-validation-for="Ad" class="text-danger"></span>
		</div>

		<div class="mb-3  form-group"
		<label asp-for=Soyad></label>
		<input asp-for="Soyad" class="form-control">
		<span asp-validation-for="Soyad" class="text-danger"></span>
		</div>

		<div class="mb-3 form-group"
		<label asp-for="Alan">Alan</label>
		<input asp-for="Alan" class="form-control">
		<span asp-validation-for="Alan" class="text-danger"></span>
		</div>


		<div class="form-group">
			@* <label asp-for="ResimURL" class="p-0"></label> *@
			<input type="file" name="file" class="form-control" />
		</div>
		<br />

		<button type="submit" class="btn btn-outline-primary" style="width:250px">Doktor Ekle</button>

		<a asp-controller="Doktor" asp-action="Index" class="btn btn-outline-primary style="width:250px">
			Doktorlar Listesine Dön

		</a>

	</div>






</form>